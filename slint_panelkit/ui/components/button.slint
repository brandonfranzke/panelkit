// Absolute minimal button component
export component Button {
    in property <string> text;
    in property <brush> background: #2980b9;
    in property <brush> text-color: white;
    in property <bool> enabled: true;
    in property <bool> inverted: false;
    
    // Callback when button is clicked
    callback clicked;
    
    // Main button
    Rectangle {
        width: 100%;
        height: 100%;
        border-radius: 4px;
        background: root.inverted ? root.text-color : root.background;
        
        // Button label
        Text {
            width: 100%;
            height: 100%;
            text: root.text;
            color: root.inverted ? root.background : root.text-color;
            font-size: 16px;
            font-weight: 600;
            horizontal-alignment: center;
            vertical-alignment: center;
            wrap: word-wrap;
        }
        
        // Touch area for the button - simplest possible implementation
        TouchArea {
            width: 100%;
            height: 100%;
            enabled: root.enabled;
            mouse-cursor: pointer;
            
            // Just use standard click handler
            clicked => {
                if (root.enabled) {
                    root.clicked();
                }
            }
        }
    }
}